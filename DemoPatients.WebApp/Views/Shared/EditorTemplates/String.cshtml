@model string

<div class="form-group">
    @Html.LabelFor(m => m)
    @Html.TextBoxFor(m => m, new { @class = "form-control", title = ViewData.ModelMetadata.Description, placeholder = ViewData.ModelMetadata.Watermark })
    @Html.ValidationMessageFor(m => m, null, new { @class = "help-block" })
</div>